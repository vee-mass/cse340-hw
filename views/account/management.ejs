<% if (title) { %>
  <h1><%= title %></h1>
<% } %>

<%- messages() %>

<main class="register-container">
  <h2>Welcome <%= locals.accountData.account_firstname %></h2>
  
  <p>You are logged in.</p>
  
  <p><a href="/account/update/<%= locals.accountData.account_id %>">Update Account Information</a></p>
  
  <% if (locals.accountData.account_type === "Employee" || locals.accountData.account_type === "Admin") { %>
    <h3>Inventory Management</h3>
    <p><a href="/inv/">Manage Inventory</a></p>
    <% } %>
    
    <hr>
    <h3>Manage Your Reviews</h3>
    <% if (reviews && reviews.length > 0) { %>
      <ul class="register-form">
        <% reviews.forEach(review => { %>
          <li>
            <strong><%= review.inv_make %> <%= review.inv_model %></strong> (Reviewed on <%= new Date(review.review_date).toLocaleDateString() %>)
            <br>
            <a href="/review/edit/<%= review.review_id %>">Edit</a> | 
            <a href="/review/delete/<%= review.review_id %>">Delete</a>
      </li>
      <% }) %>
    </ul>
<% } else { %>
  <p>You haven't written any reviews yet.</p>
<% } %>
</main>